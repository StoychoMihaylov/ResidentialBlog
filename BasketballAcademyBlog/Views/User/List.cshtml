@model List<ResidentialBlog.Models.ApplicationUser>

<div class="container">
    <div class="well">
        <h2>Потребители</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>Емайл</th>
                    <th>Име</th>
                    <th>Действие</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                    if (ViewBag.Admins.Contains(user.UserName))
                    {
                        @:<tr class="info">
                    }
                    else
                    {
                        @:<tr>
                    }

                    <td>@user.Id</td>
                    <td>@user.Email</td>
                    <td>@user.FullName</td>
                    <td>
                        @Html.ActionLink("Редактирай", "Edit", "User", new { @id = user.Id }, null)
                        @Html.ActionLink("Изтрий", "Delete", "User", new { @id = user.Id }, null)
                    </td>
                }
        </tbody>
    </table>
</div>
</div>
